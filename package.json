{
  "name": "koa-boilerplate",
  "version": "0.0.1",
  "description": "KOA basic boilerplate",
  "main": "index.js",
  "repository": "https://github.com/OlehSh/koa-boilerplate.git",
  "author": "Oleg Shubin",
  "license": "ISC",
  "scripts": {
    "start": "node ./dist/src/index.js",
    "build": "tsc",
    "start:dev": "cross-env LOGLEVEL=debug tsnd --inspect --rs -- ./src/index.ts",
    "test": "jest",
    "test:coverage": "nyc npm run test",
    "docker:up": "docker-compose -f ./docker-compose.yaml up --build",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "npm run typeorm migration:create",
    "migration:run": "npm run typeorm migration:run -- -d src/providers/database/pg/dataSourceCli.ts",
    "migration:revert": "npm run typeorm -- -d src/providers/database/pg/dataSourceCli.ts"
  },
  "dependencies": {
    "@koa/router": "^13.0.0",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.3.0",
    "joi": "^17.13.3",
    "koa-logger": "^3.2.1",
    "koa-session": "^6.2.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.5",
    "@types/eslint": "^8.4.6",
    "@types/jest": "^29.1.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/joi": "^17.2.3",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-session": "^5.10.6",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.11.7",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@typescript-eslint/types": "^5.38.1",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "supertest": "^6.2.4",
    "ts-node-dev": "^2.0.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "src/tests",
      "src/index.ts"
    ]
  }
}
